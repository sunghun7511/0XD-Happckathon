<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.SHGroup.cometooceantofish.NewLendActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds= "true"
            android:id="@+id/viewlend" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/viewlend"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <ProgressBar
                android:id="@+id/view_lend_progress"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/view_lend_form"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30px"
                android:background="#88ffffff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/view_lend_title"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="블라블라"/>

                <TextView
                    android:id="@+id/view_lend_hour_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="시간당 가격 : 1000"/>

                <TextView
                    android:id="@+id/view_lend_day_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="하루당 가격 : 10000"/>

                <TextView
                    android:id="@+id/view_lend_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="카테고리 : 낚싯대"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_gravity="center_horizontal"
                    android:text="\n작성자"/>

                <TextView
                    android:id="@+id/view_lend_author_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="아이디 : id"/>

                <TextView
                    android:id="@+id/view_lend_author_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="닉네임 : nickname"/>

                <TextView
                    android:id="@+id/view_lend_author_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="연락처 : 010"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_gravity="center_horizontal"
                    android:text="\n내용"/>

                <TextView
                    android:id="@+id/view_lend_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="내용"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>